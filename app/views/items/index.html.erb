<h1> <%= t('activerecord.models.item', :count => @items.size)%>
</h1>

<table>
  <tr>
    <th><%= t('activerecord.attributes.item.what')%></th>
    <th><%= t('activerecord.attributes.item.where')%></th>
    <th><%= t('activerecord.attributes.item.price')%></th>
    <th><%= t('activerecord.attributes.item.bought')%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.what %></td>
    <td><%= item.where %></td>
	<td><%= number_to_currency(item.price) %></td>
    <td><%= item.bought %></td>
    
    <td><%= link_to t('.show'), item %></td>
    <td><%= link_to t('.edit'), edit_item_path(item) %></td>
    <td><%= link_to t('.destroy_html'), item, confirm: t('.sure_html'), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

