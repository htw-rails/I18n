<h1>Listing items</h1>

<table>
  <tr>
    <th>What</th>
    <th>Where</th>
    <th>Bought</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.what %></td>
    <td><%= item.where %></td>
    <td><%= item.bought %></td>
    <td><%= link_to t('.show'), item %></td>
    <td><%= link_to t('.edit'), edit_item_path(item) %></td>
    <td><%= link_to t('.destroy_html'), item, confirm: t('.sure_html'), method: :delete %></td>
  </tr>
<% end %>
</table>

